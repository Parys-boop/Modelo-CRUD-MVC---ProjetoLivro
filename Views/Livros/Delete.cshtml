@model LivroCadastro.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
}

<h1>Excluir Livro</h1>

<div>
    <h4>Tem certeza que deseja excluir este livro?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Escritor</dt>
        <dd class="col-sm-10">@Model.Escritor?.Nome</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="LivroId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
