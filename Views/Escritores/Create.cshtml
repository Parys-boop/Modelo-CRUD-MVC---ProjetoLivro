@model LivroCadastro.Models.Livro

@{
    ViewData["Title"] = "Novo Livro";
}

<h1>Novo Livro</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="EscritorId" class="control-label"></label>
                <select asp-for="EscritorId" class="form-control" asp-items="ViewBag.EscritorId">
                    <option value="">-- Selecione um Escritor --</option>
                </select>
                <span asp-validation-for="EscritorId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}