@model IEnumerable<LivroCadastro.Models.Escritor>

@{
    ViewData["Title"] = "Lista de Escritores";
}

<h1>Escritores</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Novo Escritor</a>
    <a asp-controller="Livros" asp-action="Index" class="btn btn-secondary">Lista de Livros</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EscritorId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.EscritorId" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
