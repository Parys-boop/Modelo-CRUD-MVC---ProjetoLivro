@model LivroCadastro.Models.Escritor

@{
    ViewData["Title"] = "Excluir Escritor";
}

<h1>Excluir Escritor</h1>

<div>
    <h4>Tem certeza que deseja excluir este escritor?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EscritorId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
